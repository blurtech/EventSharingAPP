<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.syberianguys.srggrch.eventsgaring">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".features.event.list.presentation.EventsListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.event.add.presentation.AddEventActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".features.auth.signin.presentation.SignInActivity" />
        <activity
            android:name=".features.event.full.presentation.FullEventActivity"
            android:label="@string/title_new_event"/>
        <activity android:name=".features.auth.signup.presenter.SignUpActivity" />
        <activity
            android:name=".features.event.my.presenter.MyEventsActivity"
            android:label="@string/title_activity_my_events"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".features.event.assigned.presenter.AssignedActivity"/>

            android:theme="@style/AppTheme" />
    </application>

</manifest>